version: "3.8"

services:
  app:
    container_name: cryptzox-app
    build:
      context: .
      dockerfile: Dockerfile
    image: cryptzox-app:latest
    ports:
      - "8080:8080"
    environment:
      SPRING_DATASOURCE_URL: jdbc:postgresql://postgres:5432/cryptzox
      SPRING_DATASOURCE_USERNAME: root
      SPRING_DATASOURCE_PASSWORD: root
      SPRING_JPA_HIBERNATE_DDL_AUTO: update
    depends_on:
      - postgres

  postgres:
    container_name: cryptzox-db
    image: postgres:15
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: root
      POSTGRES_PASSWORD: root
      POSTGRES_DB: cryptzox
    volumes:
      - ./postgres_data:/var/lib/postgresql/data
